include ../../components/btn/btn.pug

section.hero
  include ../header/header
  .container.hero__container
    .hero__content
      h1.title.hero__title беспроводные наушники beats solo 3
      h3.hero__text Встречайте новую версию наушников из линейки Powerbeats.
      .hero__btn
        +btn('#', 'заказать')
      .hero__list
        each item in heroList
          .hero__item
            svg.hero__item-icon
              use(xlink:href="../img/svg/sprite.svg" + item.id)
            span.hero__item-text= item.text
    .hero__picture
      img.hero__img(src='../img/hero/MX452.png' srcset="../img/hero/MX452@2x.png 1.25x, ../img/hero/MX452@3x.png 2.25x" alt='наушники beats')

